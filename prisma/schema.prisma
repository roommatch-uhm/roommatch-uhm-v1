generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  // for local development
  // url      = env("DATABASE_URL")
  // for Vercel
  url       = env("DATABASE_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum Role {
  USER
  ADMIN
}

model User {
  id             Int      @id @default(autoincrement())
  firstName      String
  lastName       String
  UHemail        String   @unique
  password       String
  role           Role     @default(USER)
  preferences    String?
  roommateStatus String
  budget         Float?
  answers        Answer[]
  profile        Profile? // optional because a user may not have a profile yet
  meetings        Meeting[]   // Needed for Meetings feature
}

// Model for storing questions
model Question {
  id      Int      @id @default(autoincrement())
  text    String // The question itself
  type    String // e.g., 'multiple-choice', 'boolean', 'text'
  options String[] // Store options for multiple-choice questions (optional)
  answers Answer[]
}

// New model for storing answers
model Answer {
  id         Int      @id @default(autoincrement())
  userId     Int
  questionId Int
  answer     String // The answer provided by the user
  user       User     @relation(fields: [userId], references: [id])
  question   Question @relation(fields: [questionId], references: [id])
}

model Profile {
  id          Int     @id @default(autoincrement())
  userId      Int     @unique
  user        User    @relation(fields: [userId], references: [id])
  image       String?
  name        String
  description String
  clean       String
  budget      Float?
  social      String
  study       String
  sleep       String
}

model Meeting {
  id        Int      @id @default(autoincrement())
  userId    Int
  date      DateTime
  time      String
  title     String
  user      User     @relation(fields: [userId], references: [id])
}
