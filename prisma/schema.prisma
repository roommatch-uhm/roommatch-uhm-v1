generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // for local development
  url      = env("DATABASE_URL")
  // for Vercel
  // url       = env("POSTGRES_PRISMA_URL")
  // directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum Role {
  USER
  ADMIN
}

model User {
  id              Int    @id @default(autoincrement())
  firstName       String
  lastName        String
  UHemail         String @unique
  password        String
  role            Role   @default(USER)
  preferences     String?
  roommateStatus  String //Options can be "Looking", "Not Looking", "Has Roommate"
  budget          Float?
  listings        Listing[]
  ratings         Rating[]
  answers         Answer[] // Needed for matching algorithm
}

model Listing {
  id              Int   @id @default(autoincrement())
  title           String
  description     String
  location        String
  budget          Float
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  ownerId         Int
  owner           User    @relation(fields: [ownerId], references: [id])
  ratings         Rating[]
}

model Rating {
  id            Int      @id @default(autoincrement())
  rating        Int      // Assuming a rating scale 1-5
  comment       String?
  createdAt     DateTime @default(now())
  listingId     Int
  userId        Int
  listing       Listing  @relation(fields: [listingId], references: [id])
  user          User     @relation(fields: [userId], references: [id])
}

// Model for storing questions
model Question {
  id        Int      @id @default(autoincrement())
  text      String   // The question itself
  type      String   // e.g., 'multiple-choice', 'boolean', 'text'
  options   String[] // Store options for multiple-choice questions (optional)
  answers   Answer[]
}

// New model for storing answers
model Answer {
  id          Int      @id @default(autoincrement())
  userId      Int
  questionId  Int
  answer      String   // The answer provided by the user
  user        User     @relation(fields: [userId], references: [id])
  question    Question @relation(fields: [questionId], references: [id]) 
}
